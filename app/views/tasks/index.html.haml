.container-fluid
  .row
    .col-md-3.text-center
      %h3= t(:Title)
      %p= t(:The_sailing_experience_you)
      %p= t(:always_wanted)
    .col-md-9{style: 'margin-top: 70px'}
      %nav.navbar.navbar-default{role: 'navigation'}
        .container-fluid
          .navbar-header
            %button.navbar-toggle{type: 'button', 'data-toggle' => 'collapse', |
            'data-target' => '#navbar-collapse'} |
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
          .collapse.navbar-collapse#navbar-collapse
            %ul.nav.navbar-nav
              %li.active
                %a{href: 'javascript:void(0)'}= t(:Home)
              %li
                %a{href: 'javascript:void(0)'}= t(:About)
              %li
                %a{href: 'javascript:void(0)'}= t(:Ships)
              %li
                %a{href: 'javascript:void(0)'}= t(:Contact)
  .row
    .col-md-6
      %h2= t(:Welcome_abroad_sailor)
      %p.text-justify= truncate(t(:Lorem_ipsum_dolor_sit), length: 685, separator: ' ')
      %button.btn.btn-default.btn-sm.pull-right= t('buttons.more')
    .col-md-6
      %img.img-rounded{src: 'http://javelinvp.com/wp-content/uploads/3scale.png',
      alt: '3scale'}
  .row
    .col-md-12
      %b.center-block.text-center.img-thumbnail{href: 'javascript:void(0)',
      style: 'width:400px; margin-top: 20px; text-transform: uppercase'}
        = t('rent_20')
  .row
    .col-md-9
      %h2= t(:Amazing_sailing_experiences_with_our_ships)
    .col-md-3
      %h2= t(:Available_boats)
  .row
    .col-md-4
      %h4= t(:Mediterreanean_madness)
      .pull-right.text-muted= t(:days_ago, days: '2')
      .text-muted= t(:created_by, user: 'Raimon')
      %p.text-justify= truncate(t(:Lorem_ipsum_dolor_sit), length: 150, separator: ' ')

    .col-md-4.col-md-offset-1
      %h4= t(:Mermaids_spotted)
      .pull-right.text-muted= t(:days_ago, days: '3')
      .text-muted= t(:created_by, user: 'Koe')
      %p.text-justify= truncate(t(:Lorem_ipsum_dolor_sit), length: 150, separator: ' ')
    .col-md-3
      %h4= t(:Black_Pearl)
      %button.btn.btn-default.btn-sm.pull-right= t('buttons.rent_now')
      %br
      %h4= t(:The_Flying_Dutch)
      %button.btn.btn-default.btn-sm.pull-right= t('buttons.rent_now')
  .row
    .col-md-12
      %br
      %a.pull-right{href: 'javascript:void(0)'}= t(:More)
  %hr
  .row
    .col-md-12
      %a.pull-right{href: 'javascript:void(0)'} Facebook
      %a.pull-right{style: 'margin-right:15px', href: 'javascript:void(0)'} Twitter
      %p= t(:Navigating_the_mediterranean)
